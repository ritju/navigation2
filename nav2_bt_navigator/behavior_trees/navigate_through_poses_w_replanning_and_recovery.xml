
<!--
  This Behavior Tree replans the global path periodically at 1 Hz through an array of poses continuously
   and it also has recovery actions specific to planning / control as well as general system issues.
-->
<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="12" name="NavigateRecovery">
      <PipelineSequence name="NavigateWithReplanning">
        <RateController hz="1.0">
          <IsPedestrianFront pedestrain_distance = "2.0"/>
        </RateController>
        <RateController hz="5.0">
          <IsCollision/>
        </RateController>
        <RateController hz="10.0">
          <ReactiveSequence>
            <RemovePassedGoals input_goals="{goals}" output_goals="{goals}" radius="1.0"/>
          </ReactiveSequence>
        </RateController>
        <SingleTrigger>
          <RecoveryNode number_of_retries="2" name="ComputePathThroughPoses">
            <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="GridBased"/>
            <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_except_global_costmap" reset_distance="10.0"/>
          </RecoveryNode>
        </SingleTrigger>
        <RecoveryNode number_of_retries="1" name="FollowPath">
          <FollowPath path="{path}" controller_id="FollowPath"/>
          <Sequence>
            <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="GridBased"/>
          </Sequence>
        </RecoveryNode>
      </PipelineSequence>
      <ReactiveFallback name="RecoveryFallback">
        <GoalUpdated/>
        <RoundRobin name="RecoveryActions">
          <Sequence name="ClearingActions">
            <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_except_global_costmap" reset_distance="10.0"/>
          </Sequence>
          <Fallback>
            <IsCollision/>
            <CollisionRecover/>
          </Fallback>
          <Wait wait_duration="5"/>
        </RoundRobin>
      </ReactiveFallback>
    </RecoveryNode>
  </BehaviorTree>
</root>
