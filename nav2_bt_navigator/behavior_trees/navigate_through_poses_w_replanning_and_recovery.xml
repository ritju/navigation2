
<!--
  This Behavior Tree replans the global path periodically at 1 Hz through an array of poses continuously
   and it also has recovery actions specific to planning / control as well as general system issues.
-->

<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="12" name="NavigateRecovery">
      <PipelineSequence name="NavigateWithReplanning">
        <RateController hz="1.0">
          <IsPedestrianFront pedestrain_distance = "2.0"/>
        </RateController>
        <RateController hz="5.0">
          <IsCollision/>
        </RateController>
        <RateController hz="10.0">
          <RemovePassedGoals input_goals="{goals}" output_goals="{goals}" radius="1.0"/>
        </RateController>
        <RecoveryNode number_of_retries="2" name="PathCheck">
          <IsPathValid goals="{goals}" check_distance="8.0"/>
          <Sequence>
            <Wait wait_duration="5"/>
            <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_except_global_costmap" reset_distance="2.0"/>
            <Wait wait_duration="1"/>
            <Fallback>
              <IsPathValid goals="{goals}" check_distance="8.0"/>
              <PathCheck check_distance="9.0"/>
            </Fallback>
            <Wait wait_duration="1"/>
            <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="GridBased"/>
          </Sequence>
        </RecoveryNode>
        <SingleTrigger>
          <RecoveryNode number_of_retries="2" name="ComputePathThroughPoses">
            <Sequence>
              <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_except_global_costmap" reset_distance="2.0"/>
              <Wait wait_duration="1"/>
              <IsPathValid goals="{goals}" check_distance="8.0"/>
              <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="GridBased"/>
            </Sequence>
            <Sequence>
              <Wait wait_duration="5"/>
              <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_except_global_costmap" reset_distance="2.0"/>
              <Wait wait_duration="1"/>
              <Fallback>
                <IsPathValid goals="{goals}" check_distance="8.0"/>
                <PathCheck check_distance="9.0"/>
              </Fallback>
              <Wait wait_duration="1"/>
            </Sequence>
          </RecoveryNode>
        </SingleTrigger>
        <RecoveryNode number_of_retries="2" name="FollowPath">
          <PipelineSequence>
            <RateController hz="1.0">
              <IsPathValid goals="{goals}" check_distance="5.0"/>
            </RateController>
            <FollowPath path="{path}" controller_id="FollowPath"/>
          </PipelineSequence>
          <Sequence>
            <Wait wait_duration="5"/>
            <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_except_global_costmap" reset_distance="2.0"/>
            <Wait wait_duration="1"/>
            <Fallback>
              <IsPathValid goals="{goals}" check_distance="5.0"/>
              <PathCheck check_distance="6.0"/>
            </Fallback>
            <Wait wait_duration="1"/>
            <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="GridBased"/>
          </Sequence>
        </RecoveryNode>
      </PipelineSequence>
      <ReactiveFallback name="RecoveryFallback">
        <GoalUpdated/>
        <Sequence name="RecoveryActions">
          <Wait wait_duration="5"/>
          <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="local_costmap/clear_except_local_costmap" reset_distance="2.0"/>
          <ClearCostmapExceptRegion name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_except_global_costmap" reset_distance="2.0"/>
          <Wait wait_duration="1"/>
          <Fallback>
            <IsCollision/>
            <CollisionRecover/>
          </Fallback>
          <Wait wait_duration="1"/>
        </Sequence>
      </ReactiveFallback>
    </RecoveryNode>
  </BehaviorTree>
</root>
